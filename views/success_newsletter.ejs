  <body>
 
    <div class="container">

   
<!-- nav section -->
<div stye="width:100%; margin-top:0%;">
    
  <div class="navigation">
    <nav class="navbar navbar-default" >
      <div class="container">
        <div class="navbar-header">
          <p class="navbar-brand">Front-End-Task</p>
        </div>
          <ul class="nav navbar-nav navbar-right">
